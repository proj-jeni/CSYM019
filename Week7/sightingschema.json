{
"$schema":"http://json-schema.org/draft-04/schema#",
"title":"Sightings Report",
"description":"Reports of rare animal Sightings in Exland",
"type":"object",
"properties":{
"sightings":{
"type":"array",
"items":{
"type":"object",
"properties":{
"id":{"type":"integer","minimum":0.00},
"animal":{"type":"string", "enum":["Pine Martin", "Owl","Otter","Osprey"]},
"number":{"type":"integer", "minimum":0.00},
"location":{"type":"string","enum":["Marshall woods"]},
"date":{"type":"string"},
"time":{"type":"string"},
"observer":{
"type":"object",
"properties":{
"name":{"type":"string"},
"email":{"type":"string"}
}
},
"observations":{"type":"string"}
}
}
}
}
}
